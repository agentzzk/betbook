<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#3F51B5</item>
        <item name="colorPrimaryDark">#3949AB</item>
        <item name="colorAccent">#00B0FF</item>
    </style>
    <style name="AppTheme" parent="AppTheme.Base"></style>

    <!-- Material Theme Styling -->
    <style name="FullWidthEditText" parent="Widget.AppCompat.EditText">
        <item name="android:paddingTop">@dimen/text_padding</item>
        <item name="android:paddingLeft">@dimen/text_padding</item>
        <item name="android:paddingRight">@dimen/text_padding</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/text_fields</item>
    </style>

    <style name="FullWidthTextView" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:paddingTop">@dimen/text_padding</item>
        <item name="android:paddingLeft">@dimen/text_padding</item>
        <item name="android:paddingRight">@dimen/text_padding</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/text_fields</item>
    </style>

    <style name="MaterialButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:textColor">@color/buttonText</item>
    </style>

</resources>
